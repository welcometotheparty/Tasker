- if current_user
  - if task.user_id == current_user.id
    .card
      .card-header
        = task.title
      .card-body
        = task.content
      .card-footer
        = task.created_at
        = link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
        = task.user.email






