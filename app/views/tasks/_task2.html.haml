.card.mb-3{:style => "max-width: 1000px;max-height: 80px;"}
  .row.no-gutters
    .card-body
      .card-title #{task.title}
    .row.no-gutters.text-muted
      .card-body.my-auto
        %p #{task.created_at.strftime("%Y-%m-%d").to_s}
    .row.no-gutters
      %a= link_to 'Done', task, method: :delete, class: 'btn btn-success', id: "doneButton"


